{
  "name": "solid-start-monorepo",
  "description": "Official starter for SolidJS",
  "version": "0.2.0",
  "author": "Ryan Carniato",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryansolid/solid-start"
  },
  "private": true,
  "scripts": {
    "clean": "pnpm run clean:root",
    "clean:root": "rimraf node_modules",
    "publish:release": "lerna publish",
    "docs:dev": "vinxi dev",
    "docs:build": "vinxi build",
    "docs:start": "node ./.output/server/index.mjs",
    "clean:test": "rimraf .tmp",
    "build:all": "pnpm run -r --if-present build",
    "install:playwright": "pnpm --filter solid-start-tests run install:playwright",
    "test:all": "pnpm run clean:test && cross-env START_ADAPTER=solid-start-node npm run test",
    "test": "pnpm run clean:test && pnpm --filter solid-start-tests test --",
    "show:test-report": "pnpm --filter solid-start-tests show:test-report",
    "bump": "node scripts/bump.js"
  },
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "^0.2.0",
    "@decs/typeschema": "^0.12.1",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@solidjs/meta": "^0.29.0",
    "@solidjs/router": "^0.10.9",
    "@solidjs/start": "workspace:*",
    "@tailwindcss/typography": "^0.5.9",
    "@trpc/client": "^9.27.4",
    "@trpc/server": "^9.27.4",
    "@vinxi/plugin-mdx": "^3.6.7",
    "citty": "^0.1.5",
    "coveralls": "^3.1.1",
    "debug": "^4.3.4",
    "fast-glob": "^3.3.0",
    "graphql": "^16.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^3.28.1",
    "semver": "^7.5.4",
    "solid-js": "^1.8.11",
    "solid-mdx": "^0.0.7",
    "solid-start-mdx": "workspace:*",
    "tailwindcss": "^3.3.3",
    "tippy.js": "^6.3.7",
    "turbo": "^1.10.7",
    "typescript": "4.7.4",
    "valibot": "0.24.1",
    "vinxi": "^0.1.3",
    "vite": "^4.4.6"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "wrangler": "3.22.1"
  }
}
